---
import VideoBanner from "../components/VideoBanner.astro";
import Home from "../layouts/Home.astro";
import { accent } from "../styles/common";
---

<style define:vars={{ accent }}>
  button {
    border: 1px solid var(--accent);
    padding: 0 15px 0px 15px;
    margin: 15px 0;
  }
  #intro {
    width: 100%;
    height: 90vh;
    text-align: center;
  }
  .intro_container {
    padding: 80px 0 80px 0;
  }
  #mobile_app {
    height: 70vh;
  }
  #mobile_app img {
    height: 500px;
    width: 250px;
  }
  #schools_tests {
    display: flex;
    flex-direction: row;
    gap: 1.5em;
  }
  #schools_tests > * {
    flex: 1;
  }
  pre {
    white-space: pre-wrap;
    word-wrap: break-word;
  }
</style>
<Home title="Home">
  <div id="intro">
    <VideoBanner />

    <div class="intro_container">
      <span style="font-size: 2em;">
        <b>INTRAMU&trade;</b> is the better solution for managing intramural sports.
      </span>
      <br />
      <button style="">Find out why.</button>
      <br />
      <span style="font-size: 2em;">^</span>
    </div>
  </div>
  <div id="mobile_app">
    <h2>The Intramu mobile app:</h2>
    <hr />
    <!-- <img src="./phone.jpeg" /> -->
    <div style="display: flex; flex-direction: row; align-items: center;">
      <p style="flex: .8; font-size: 1.5em;">
        Intramu is your app for all things intramural sports! Find leagues,
        create teams, track stats, and connect with teammates - all in one
        place. It's the easiest way to join the fun and get active, whether
        you're a competitive athlete or just looking for a casual game. Download
        Intramu and experience the thrill of competition and the joy of
        teamwork!
      </p>
      <div class="mobile_container" style="flex: 1; text-align: right;">
        <img src="/phone.png" />
        <img src="/phone.png" />
        <img src="/phone.png" />
      </div>
    </div>
  </div>
  <div id="schools_tests">
    <div>
      <h2>Schools:</h2>
      <hr />
      <pre>
