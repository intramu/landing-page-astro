---
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";
import { secondaryColor } from "../css/common";
import Root from "./Root.astro";

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<Root title={title}>
    <Navbar />
    <main>
        <slot />
    </main>
    <Footer />
</Root>

<style is:global define:vars={{ secondaryColor }}>
    main {
        max-width: 1620px;
        width: 100%;
        margin: auto;
        flex: auto;
        /* overflow-x: hidden; */
        overflow-wrap: break-word;
    }
    header {
        max-width: 1620px;
        width: 100%;
        margin: auto;
    }
    .flex-row {
        display: flex;
        flex-direction: row;
    }
    .flex-column {
        display: flex;
        flex-direction: column;
    }
    .line {
        border-bottom: 3px solid black;
        margin: 10px 0px;
    }
    .table-header {
        font-size: 25px;
    }
    a {
        text-decoration: none;
    }
    button {
        background-color: transparent;
        border-radius: 16px;
        padding: 0px 18px;
        transition: all 0.2s ease-in-out;
        cursor: pointer;
    }
    .common-banner {
        width: 100%;
        height: 30vh;
        background-color: var(--secondaryColor);
        margin: 70px 0;
        padding: 50px;
        border-radius: 16px;
    }
</style>
